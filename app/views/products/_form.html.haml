    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  -# .field
  -#   = f.label :brand
  -#   = f.text_field :brand
  -# .field
  -#   = f.label :store
  -#   = f.text_field :store
  .field
    = f.label :image
    = f.file_field :image 
  .field
    = f.label :price
    = f.number_field :price 
  .actions
    = f.submit 'Save'
